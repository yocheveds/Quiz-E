<div class="section no-pad-bot" id="index-banner">
  <div class="container">

    <div class="the_crumbs">
      <div class="col s12">
        <a href="/" class="breadcrumb">Home</a>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        <a href="" class="breadcrumb">Play Flashcards</a>
      </div>
    </div>

    <div class="row">
        <div class="col s8" style="border: 1px solid pink;"></div>
        <div id="share-btn-f" class="col s4" style="border: 1px solid chartreuse;">
          <button class="col s4 btn" type="submit" value="share-card" name="share-card">Share Flashcards</button>
        </div>
    </div>

    <div class="row">
      <div class="col s12">
        <h5>{{this.title}}</h5>
        <p></p>
      </div>
    </div>

    {{#each mycard}}
    <div class="row content-card">
      <!-- front / back / both sides of card appear here -->
      {{this.question}}
      {{this.answer}}
    </div>
    {{/each}}

    <div class="row modal-row controls-card">
      <div class="col s4 previous"><div id="previous" value="previous-card" class="btn">PREVIOUS</div></div>
      <div class="col s4 flip"><div id="{{this.id}}" onclick="flip" value="flip-card" class="btn">FLIP</div></div>
      <div class="col s4 next"><div id="{{this.id}}" onclick="next" value="next-card" class="btn">NEXT</div></div>
    </div>


  </div> <!-- end container -->
</div>
